{
  "manifest_version": 2,
  "name": "Tab Sessions",
  "version": "1.0",

  "description": "Saves any number of tab sessions to use for later. Just open the menu, press \"Save Current Session\" and it saves the session on your current window!",
  "icons": {
    "96": "icons/tab-sessions-96.png"
  },

  "permissions": [
    "tabs",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/tab-sessions-96.png",
    "default_title": "Tab Sessions",
    "default_popup": "popup/choose_tab_session.html"
  },

  "sidebar_action": {
    "default_title": "Tab Session",
    "default_panel": "popup/choose_tab_session.html",
    "default_icon": "icons/tab-sessions-96.png"
  },

  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Alt+R",
        "linux": "Alt+R"
      }
    }
  }
}
